---
import {PokeResponse, Sprites} from "../interfaces/pokemon-single";
const {name, url} = Astro.props
const response:Response = await fetch(url)
const data :PokeResponse = await response.json();
const {sprites}:Sprites | undefined = data;
console.log('Pokimon',sprites.other.dream_world.front_default)
---


<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white justify-center m-1.5 align-text-bottom">
    {<img class="w-full w-1/3 h-1/3 m-auto" src={sprites.other.dream_world.front_default} alt="Sunset in the mountains" />}
    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2 text-gray-800">{name}</div>
        <p class="text-gray-700  text-base">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.
        </p>
        {data.types.map(slot =>
                <span class="inline-block bg-red-500 text-slate-200 rounded-full px-3 py-1 text-sm
                font-semibold text-gray-700 mr-2 mb-2">{slot.type.name}</span>)}
    </div>
</div>